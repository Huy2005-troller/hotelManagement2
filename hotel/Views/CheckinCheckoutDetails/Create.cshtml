@{
    ViewData["Title"] = "Nhập số lượng chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml"; // hoặc null nếu bạn không dùng layout
}

<h2>Nhập số lượng khách và dịch vụ</h2>

<form method="post" asp-action="CreateMultiple">
    <input type="hidden" name="CheckinId" value="@ViewBag.CheckinId" />

    <div class="form-group">
        <label>Số lượng khách:</label>
        <input type="number" name="SoLuongKhach" class="form-control" min="1" required />
    </div>

    <div class="form-group">
        <label>Số lượng dịch vụ:</label>
        <input type="number" name="SoLuongDichVu" class="form-control" min="0" required />
    </div>

    <button type="submit" class="btn btn-success">Tiếp tục</button>
</form>
