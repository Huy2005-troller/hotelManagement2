<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
        }

        .sidebar {
            width: 220px;
            height: 100vh;
            position: fixed;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 12px 20px;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .main-content {
            margin-left: 220px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">Menu</h4>
        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
        <a asp-controller="Rooms" asp-action="Index">Quản Lý Phòng</a>
        <a asp-controller="CheckinCheckouts" asp-action="Index">Quản lý Check in-out</a>
        <a asp-controller="CheckinCheckoutDetails" asp-action="Create">Chi tiết Checkin-test</a>
        <a asp-controller="HoaDons" asp-action="Index">Quản lý Hóa đơn</a>
        <a asp-controller="KhuyenMais" asp-action="Index">Quản lý Khuyến mãi</a>
        <a asp-controller="RoomTypes" asp-action="Index">Quản lý Loại Phòng</a>
        <a asp-controller="DichVus" asp-action="Index">Quản lý Dịch vụ</a>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
