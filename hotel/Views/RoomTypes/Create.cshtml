@model hotel.Models.RoomType
@{
    ViewData["Title"] = "Tạo loại phòng mới";
}

<h1>Tạo loại phòng mới</h1>
<h4>RoomType</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên loại phòng</label>
                <input asp-for="Name" class="form-control" placeholder="Ví dụ: Single Room" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Kind" class="control-label">Phân loại</label>
                <input asp-for="Kind" class="form-control" placeholder="Ví dụ: Luxury" />
                <span asp-validation-for="Kind" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}